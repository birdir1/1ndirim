{
  "name": "1ndirim-backend",
  "version": "1.0.0",
  "description": "1ndirim Backend API - Campaign Aggregator",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "npm run check:syntax",
    "check:syntax": "find src -name '*.js' -print0 | xargs -0 -n1 node --check",
    "test": "npm run check:syntax && NODE_ENV=test sh -c \"find test -name '*.test.js' -print0 | xargs -0 node --test\"",
    "seed": "node src/scripts/seed.js",
    "migrate": "node src/scripts/migrate.js",
    "backup": "node src/scripts/backup.js",
    "cron": "node src/jobs/cronWorker.js",
    "add-sources": "node src/scripts/add-missing-sources.js",
    "fix-operators": "node src/scripts/fix_operator_sources.js"
  },
  "keywords": [
    "campaign",
    "aggregator",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "firebase-admin": "^13.6.1",
    "he": "^1.2.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "openai": "^6.17.0",
    "pg": "^8.11.3",
    "redis": "^5.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  }
}
