# Production Environment Variables
# Bu dosyayı kopyalayıp .env.production olarak kaydedin
# Production'da secret store kullanın (Render/Fly/AWS Secrets Manager/Railway)

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=indirim_db
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Postgres image variables (compose)
POSTGRES_DB=indirim_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Backend
NODE_ENV=production
PORT=3000

# Firebase Admin (choose ONE of the options below)
# Option A: Single-line JSON (escape newlines in private_key with \n)
FIREBASE_SERVICE_ACCOUNT='{"project_id":"your-project-id","client_email":"service-account@your-project-id.iam.gserviceaccount.com","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"}'
# Option B: Point to a mounted service account file path
# GOOGLE_APPLICATION_CREDENTIALS=/run/secrets/firebase-service-account.json

# Bot auth (required for bot -> backend writes)
INTERNAL_BOT_TOKEN=CHANGE_ME_INTERNAL_BOT_TOKEN

# Redis (cache)
REDIS_HOST=redis
REDIS_PORT=6379

# Bot
BACKEND_API_URL=http://backend:3000/api
SCRAPER_DELAY_MS=3000
SCRAPER_RETRY_COUNT=3
SCRAPER_TIMEOUT_MS=30000
SCHEDULER_INTERVAL_MINUTES=30
LOG_LEVEL=info

# Backup
BACKUP_DIR=/backups
