# Production Environment Variables (LOCAL/DOCKER PROD COMPOSE)
# NOT: Gerçek production deploy'da secret store kullanılmalı.

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=indirim_db
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_LOCAL_ONLY_2026

# Postgres image variables (compose)
POSTGRES_DB=indirim_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_LOCAL_ONLY_2026

# Backend
NODE_ENV=production
PORT=3000

# Bot auth (required for bot -> backend writes)
INTERNAL_BOT_TOKEN=CHANGE_ME_INTERNAL_BOT_TOKEN_LOCAL_ONLY_2026

# Redis (cache)
REDIS_HOST=redis
REDIS_PORT=6379

# Bot
BACKEND_API_URL=http://backend:3000/api
SCRAPER_DELAY_MS=3000
SCRAPER_RETRY_COUNT=3
SCRAPER_TIMEOUT_MS=30000
SCHEDULER_INTERVAL_MINUTES=30
LOG_LEVEL=info

# Backup
BACKUP_DIR=/backups
